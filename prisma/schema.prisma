// This schema is mirrored from apps/api/prisma/schema.prisma
// to enable NextAuth in apps/web

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role           @default(STUDENT)
  accounts      Account[]
  sessions      Session[]
  legalConsents LegalConsent[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model LegalConsent {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Documento legal
  documentType    DocumentType
  documentVersion String
  documentHash    String?

  // MÃ©todo de consentimiento
  consentMethod ConsentMethod

  // Evidencia (GDPR Art. 7)
  ipAddress   String?
  userAgent   String?
  geolocation Json?

  // Metadata adicional
  metadata Json?

  // Timestamp
  acceptedAt DateTime @default(now())

  @@unique([userId, documentType, documentVersion])
  @@index([userId])
  @@index([documentType])
  @@index([acceptedAt])
  @@map("legal_consents")
}

enum Role {
  USER
  STUDENT
  TEACHER
  ADMIN
  COMPANY
}

enum DocumentType {
  TERMS
  PRIVACY
  COOKIES
  COPPA
}

enum ConsentMethod {
  CHECKBOX
  BUTTON_CLICK
  SCROLL_COMPLETE
}

model CookieConsent {
  id            String   @id @default(cuid())
  userId        String?
  preferences   String   @db.Text // JSON string of cookie preferences
  policyVersion String
  ipAddress     String
  userAgent     String   @db.Text
  acceptedAt    DateTime @default(now())
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([acceptedAt])
  @@map("cookie_consents")
}
