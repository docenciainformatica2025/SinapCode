// This schema is mirrored from apps/api/prisma/schema.prisma
// to enable NextAuth in apps/web

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(STUDENT)
  accounts      Account[]
  sessions      Session[]
  legalConsents LegalConsent[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  USER
  STUDENT
  TEACHER
  ADMIN
}

// ============================================
// SISTEMA DE AUDITORÍA LEGAL
// ============================================

model LegalConsent {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Documento legal
  documentType    DocumentType
  documentVersion String
  documentHash    String?
  
  // Método de consentimiento
  consentMethod   ConsentMethod
  
  // Evidencia (GDPR Art. 7)
  ipAddress       String?
  userAgent       String?
  geolocation     Json?
  
  // Metadata adicional
  metadata        Json?
  
  // Timestamp
  acceptedAt      DateTime @default(now())
  
  @@unique([userId, documentType, documentVersion])
  @@index([userId])
  @@index([documentType])
  @@index([acceptedAt])
  @@map("legal_consents")
}

enum DocumentType {
  TERMS
  PRIVACY
  COOKIES
  COPPA
}

enum ConsentMethod {
  CHECKBOX
  BUTTON_CLICK
  SCROLL_COMPLETE
}

