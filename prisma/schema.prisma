// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// USUARIOS Y AUTENTICACIÓN
// ============================================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(STUDENT)
  
  // Security fields
  mfaEnabled       Boolean   @default(false)
  mfaSecret        String?
  lastLoginAt      DateTime?
  lastLoginIp      String?
  failedLoginCount Int       @default(0)
  lockedUntil      DateTime?
  
  // Age verification (COPPA compliance)
  birthDate     DateTime?
  isMinor       Boolean   @default(false)
  guardianEmail String?
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  accounts      Account[]
  sessions      Session[]
  legalConsents LegalConsent[]
  auditLogs     AuditLog[]
  dataRequests  DataSubjectRequest[]
  
  @@map("users")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String? @db.Text
  access_token       String? @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// SISTEMA LEGAL Y CONSENTIMIENTO
// ============================================

model LegalConsent {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Documento legal
  documentType    DocumentType
  documentVersion String
  documentHash    String?

  // Método de consentimiento
  consentMethod ConsentMethod

  // Evidencia (GDPR Art. 7)
  ipAddress        String?
  userAgent        String?
  geolocation      Json?    // {latitude, longitude, accuracy}
  screenResolution String?
  language         String?
  timezone         String?

  // Metadata adicional
  metadata Json?

  // Timestamp
  acceptedAt DateTime @default(now())

  @@unique([userId, documentType, documentVersion])
  @@index([userId])
  @@index([documentType])
  @@index([acceptedAt])
  @@map("legal_consents")
}

model CookieConsent {
  id            String   @id @default(cuid())
  userId        String?
  preferences   String   @db.Text // JSON string of cookie preferences
  policyVersion String
  ipAddress     String
  userAgent     String   @db.Text
  acceptedAt    DateTime @default(now())
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([acceptedAt])
  @@map("cookie_consents")
}

model LegalDocument {
  id              String    @id @default(uuid())
  documentType    DocumentType
  version         String
  content         String    @db.Text
  contentHash     String    // SHA-256
  
  // Vigencia
  effectiveDate   DateTime
  deprecatedDate  DateTime?
  
  // Metadata
  changesSummary  String?   @db.Text
  metadata        Json?
  
  // Auditoría
  createdBy       String?
  createdAt       DateTime  @default(now())
  
  @@unique([documentType, version])
  @@index([documentType])
  @@index([effectiveDate])
  @@map("legal_documents")
}

model LegalNotification {
  id              String   @id @default(uuid())
  userId          String
  
  // Tipo de notificación
  notificationType NotificationType
  documentVersion  String?
  
  // Entrega
  deliveryMethod   DeliveryMethod
  deliveryStatus   DeliveryStatus
  sentAt           DateTime @default(now())
  readAt           DateTime?
  
  // Evidencia
  emailId          String?  // ID de SendGrid/SES
  trackingData     Json?
  
  // Metadata
  metadata         Json?
  
  @@index([userId])
  @@index([notificationType])
  @@index([sentAt])
  @@map("legal_notifications")
}

model DataSubjectRequest {
  id                String   @id @default(uuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // Tipo de solicitud
  requestType       RequestType
  status            RequestStatus
  
  // Datos
  requestData       Json?
  responseData      Json?
  
  // Verificación
  verificationMethod String?
  
  // Compliance
  requestedAt       DateTime @default(now())
  completedAt       DateTime?
  responseDeadline  DateTime // 30 días GDPR
  
  // Metadata
  metadata          Json?
  
  @@index([userId])
  @@index([requestType])
  @@index([status])
  @@index([requestedAt])
  @@map("data_subject_requests")
}

// ============================================
// AUDITORÍA Y MÉTRICAS
// ============================================

model AuditLog {
  id            String   @id @default(uuid())
  userId        String?
  user          User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  // Evento
  action        String?   // Legacy support ("user.create")
  eventType     String?   // New structure
  eventCategory EventCategory?
  eventData     Json?
  
  // Contexto
  entity        String?  // Legacy
  entityId      String?  // Legacy
  changes       Json?    // Legacy
  result        String?  // Legacy
  errorMsg      String?  // Legacy
  
  ipAddress     String?
  userAgent     String?
  sessionId     String?
  
  // Inmutabilidad (blockchain-style)
  hash          String?
  previousHash  String?
  
  // Metadata
  metadata      Json?
  
  // Timestamp
  createdAt     DateTime @default(now())
  
  @@index([userId])
  @@index([eventType])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

model SystemMetric {
  id        String   @id @default(cuid())
  metric    String   // "api.response_time", "db.connections", "memory.usage"
  value     Float
  unit      String   // "ms", "count", "%", "bytes"
  tags      Json?    // {"endpoint": "/api/users", "method": "GET"}
  timestamp DateTime @default(now())

  @@index([metric])
  @@index([timestamp])
  @@map("system_metrics")
}

// ============================================
// ENUMS
// ============================================

enum Role {
  SUPER_ADMIN
  ADMIN
  MODERATOR
  SUPPORT
  TEACHER
  STUDENT
  USER
  COMPANY
}

enum DocumentType {
  TERMS
  PRIVACY
  COOKIES
  COPPA
}

enum ConsentMethod {
  CHECKBOX
  BUTTON_CLICK
  SCROLL_COMPLETE
}

enum NotificationType {
  TERMS_UPDATE
  PRIVACY_UPDATE
  DATA_BREACH
  ACCOUNT_DELETION
}

enum DeliveryMethod {
  EMAIL
  IN_APP
  SMS
}

enum DeliveryStatus {
  SENT
  DELIVERED
  READ
  FAILED
}

enum RequestType {
  ACCESS
  RECTIFICATION
  DELETION
  PORTABILITY
  OBJECTION
}

enum RequestStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  REJECTED
}

enum EventCategory {
  LEGAL
  SECURITY
  DATA
  TRANSACTION
}
