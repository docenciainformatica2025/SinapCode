# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Google reCAPTCHA v3
# Get your keys from: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_site_key_here
RECAPTCHA_SECRET_KEY=your_secret_key_here

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/sinapcode

# Authentication
NEXTAUTH_URL=http://localhost:3004
NEXTAUTH_SECRET=your_nextauth_secret_here

# Stripe (Payments)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# SendGrid (Emails)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@sinapcode.com

# Google Cloud (Optional - for file storage)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_BUCKET_NAME=your_bucket_name

# Blockchain (Optional - for certificates)
ETHEREUM_PRIVATE_KEY=your_ethereum_private_key
POLYGON_RPC_URL=https://polygon-rpc.com

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_BLOCKCHAIN_CERTIFICATES=false
