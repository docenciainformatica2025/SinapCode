# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here-min-32-chars

# Database (Supabase PostgreSQL)
# IMPORTANTE: Usar Connection Pooler (puerto 6543) para compatibilidad IPv4
# Obtener de: Supabase Dashboard > Settings > Database > Connection String > Transaction pooler
DATABASE_URL="postgresql://postgres.PROJECT_REF:YOUR_PASSWORD@aws-1-us-east-2.pooler.supabase.com:6543/postgres?pgbouncer=true"
# Para migraciones, usar tambi√©n el pooler (NO el puerto 5432 directo)
DIRECT_URL="postgresql://postgres.PROJECT_REF:YOUR_PASSWORD@aws-1-us-east-2.pooler.supabase.com:6543/postgres"pcode

# API Backend
API_URL=http://localhost:3001

# Analytics (Optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_GA_ID=

# AI Services (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Email (Optional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
